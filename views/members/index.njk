{% extends "template.njk" %}

{% block content %}
    <div class="card table-container">
    <a class="button-novo" href="/members/create">Novo</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Membro</th>
                <th>Email</th>
                <th>Peso</th>
                <th>Altura</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>
                <span style='background-image:url({{member.avatar_url}})'></span>{{member.name}}
                </td>
                <td>{{member.email}}</td>
                <td>{{member.weidth}}kg</td>
                <td>{{member.heigth}}cm</td>
                <td><a href='/members/{{member.id}}'>Editar</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    {% endblock%}